{
    "name": "memorylink/memorylink-cms",
    "description": "MemoryLink CMS - PHP Backend",
    "type": "project",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "MemoryLink\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MemoryLink\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-install-cmd": [
            "echo 'Composer install completed successfully!'"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
