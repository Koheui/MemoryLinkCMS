rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // WARNING: This is an insecure rule. It allows any authenticated user
      // to read and write to any document in the database.
      // This is a temporary measure to unblock the user and diagnose the
      // persistent permission issues. This MUST be replaced with secure
      // rules before any production deployment.
      allow read, write: if request.auth != null;
    }
  }
}
