rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }
    
    function isAdmin() {
      return isSignedIn() && request.auth.token.role == 'admin';
    }

    match /users/{uid} {
      allow read, write: if isOwner(uid) || isAdmin();
    }

    match /memories/{memoryId} {
      // READ: Owner or admin can read/list their own memories.
      allow read, list: if isOwner(resource.data.ownerUid) || isAdmin();
      
      // CREATE: Any signed-in user can create a memory for themselves.
      allow create: if isSignedIn() && isOwner(request.resource.data.ownerUid);

      // UPDATE/DELETE: Only the owner or an admin can update/delete.
      allow update, delete: if isOwner(resource.data.ownerUid) || isAdmin();
    }
    
    match /memories/{memoryId}/assets/{assetId} {
      // Allow full access if user is owner of the parent memory document.
      allow read, list, write: if get(/databases/$(database)/documents/memories/$(memoryId)).data.ownerUid == request.auth.uid || isAdmin();
    }
    
    match /assets/{assetId} {
      allow read, list, write: if isOwner(resource.data.ownerUid) || isAdmin();
    }
    
    match /orders/{orderId} {
      allow read, write: if isAdmin();
    }
    
    match /publicPages/{pageId}/{documents=**} {
      allow read: if true;
      allow write: if false; // Only server-side can write
    }
  }
}
