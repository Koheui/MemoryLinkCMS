rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    //
    // USER-OWNED DATA
    //
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Memories: Owners can do anything. Public read is handled by generated pages.
    match /memories/{memoryId} {
      // Allow owner to read/write/delete.
      allow read, update, delete: if request.auth.uid == resource.data.ownerUid;
      // Allow anyone to create a memory, which will initially have a null owner.
      // Ownership will be claimed later.
      allow create: if request.auth.uid != null;
    }

    // Assets: Owners can do anything.
    match /assets/{assetId} {
       allow read, write, delete: if request.auth != null && resource.data.ownerUid == request.auth.uid;
    }
    
    //
    // ADMIN-ONLY DATA
    //
    match /orders/{orderId} {
        // Only admins (with custom claim) can read/write orders.
        allow read, write: if request.auth.token.role == 'admin';
    }
  }
}
