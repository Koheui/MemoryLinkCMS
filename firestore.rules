
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isOwner(uid) {
      return request.auth.uid == uid;
    }

    match /users/{uid} {
      allow read, write: if isOwner(uid);
    }

    match /memories/{memoryId} {
      // Allow the owner to get their own document directly.
      allow get: if isOwner(resource.data.ownerUid);
      // Allow the owner to list their own documents, essential for queries.
      allow list: if request.query.get("ownerUid") == request.auth.uid;
      // Allow the owner to create, update, or delete their own document.
      allow write: if isOwner(request.resource.data.ownerUid);

      match /assets/{assetId} {
        allow read, write: if isOwner(get(/databases/$(database)/documents/memories/$(memoryId)).data.ownerUid);
      }
      
      match /blocks/{blockId} {
        allow read, write: if isOwner(get(/databases/$(database)/documents/memories/$(memoryId)).data.ownerUid);
      }
    }

    match /assets/{assetId} {
      allow create: if isOwner(request.resource.data.ownerUid);
      allow read, update, delete: if isOwner(resource.data.ownerUid);
    }
  }
}
