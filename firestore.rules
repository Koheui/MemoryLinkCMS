rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    match /users/{uid} {
      allow read, write: if isOwner(uid) || isAdmin();
    }

    match /memories/{memoryId} {
      allow get: if isOwner(resource.data.ownerUid) || isAdmin();
      allow list: if (request.auth.uid == request.query.get("where").ownerUid) || isAdmin();
      allow write: if isOwner(request.resource.data.ownerUid) || isAdmin();

      // Subcollection for blocks
      match /blocks/{blockId} {
        allow read, write: if isOwner(get(/databases/$(database)/documents/memories/$(memoryId)).data.ownerUid) || isAdmin();
      }
    }

    match /assets/{assetId} {
      allow get: if isOwner(resource.data.ownerUid) || isAdmin();
      allow list: if (request.auth.uid == request.query.get("where").ownerUid) || isAdmin();
      allow create: if isOwner(request.resource.data.ownerUid) || isAdmin();
      allow update, delete: if isOwner(resource.data.ownerUid) || isAdmin();
    }

    match /orders/{orderId} {
      allow read, write: if isAdmin();
    }

    // Public pages are generated by functions, not written by clients.
    match /publicPages/{pageId}/{documents=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
