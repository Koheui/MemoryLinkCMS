rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    match /users/{uid} {
      allow read, write: if isOwner(uid);
    }

    match /memories/{memoryId} {
      allow read, write: if isOwner(resource.data.ownerUid);
    }

    // This rule allows a user to query for their own assets.
    // It is secure because it checks the ownerUid against the user's token.
    match /assets/{assetId} {
       allow read, write: if isOwner(request.resource.data.ownerUid) || isOwner(resource.data.ownerUid);
    }
  }
}
