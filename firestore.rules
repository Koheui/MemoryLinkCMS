rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    match /users/{uid} {
      allow read, write: if isOwner(uid) || isAdmin();
    }

    match /memories/{memoryId} {
      allow read, update, delete: if isOwner(resource.data.ownerUid) || isAdmin();
      allow create: if isOwner(request.resource.data.ownerUid) || isAdmin();
      allow list: if isOwner(request.query.resource.data.ownerUid) || isAdmin();
    }
    
    // Allow owner to read/list their own assets
    match /assets/{assetId} {
       allow read, list: if isOwner(resource.data.ownerUid) || isAdmin();
       allow create: if isOwner(request.resource.data.ownerUid) || isAdmin();
       // update and delete might be needed later
       allow update, delete: if isOwner(resource.data.ownerUid) || isAdmin();
    }

    match /orders/{orderId} {
      allow read, write: if isAdmin();
    }
    
    match /publicPages/{pageId}/{documents=**} {
      allow read: if true;
      allow write: if false; // Only functions can write
    }
  }
}
