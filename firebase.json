{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "predeploy": [
      "npm run build"
    ],
    "rewrites": [
      {
        "source": "/memories",
        "destination": "/memories.html"
      },
      {
        "source": "/p",
        "destination": "/p.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
